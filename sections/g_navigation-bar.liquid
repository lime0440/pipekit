{% liquid
    assign NS = 'navigation-bar'
    assign cn = '#' | append: NS 
%}

{% render 'load-css', file: NS %}

{%- if section.settings.alignment == 'manual' -%}
    {% assign is_manual = true %}
{%- endif -%}

{% capture Nav %}
    {% render 'main-nav',
        items: section.blocks,
        manual_alignment: is_manual
    %}
{% endcapture %}

{% if Nav != blank %}
    <div class="{{ cn }} mobile-hidden" style="
        --{{ NS }}-bg-color: {{ section.settings.bg_color }};
        --{{ NS }}-text-color: {{ section.settings.text_color }};
        {% unless is_manual %}
            --{{ NS }}-alignment: {{ section.settings.alignment }};
        {% endunless %}
            
    ">
        <div class="#container @width:{{ settings.header_layout }}">
            {{ Nav }}
        </div>
    </div>
{% endif %}

{% render 'main-nav-mobile',
    items: section.blocks,
    header: false
%}

