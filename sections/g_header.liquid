{% liquid
    assign NS = "header"
    assign cn = "#" | append: NS

    assign header_id = 'mainHeader' | append: section.id
    assign searchbar_popup_id = 'searchPopup' | append: section.id
    assign cn_s = cn | append: '-searchbar'
    assign cn_t = cn | append: '-toolbar'
    assign center_search = false
    if section.blocks.size == 0 and section.settings.layout == 'center_logo' 
        assign center_search = true
    endif

    assign mobile_drawer_id = 'mainHeaderDrawer' | append: section.id

    assign app_block = section.blocks | where: 'type', '@app' | first
%}

{% render 'load-css', file: NS %}

{%- if request.page_type == 'index' -%}
    <h1 class="visually-hidden">{{ shop.name }}</h1>
{%- endif -%}

{%- capture Logo -%}
    <div class="{{ cn }}-logo"
        style="{% if section.settings.logo != blank %}--logo-desktop-width: {{ section.settings.logo_desktop_width }}px; --logo-mobile-width: {{ section.settings.logo_mobile_width }}px;{% endif %}"
    >
        <a class="stretched-link" href="{{ routes.root_url }}" aria-label="{{ 'general.accessibility.home' | t }}"></a>
      
        {%- if section.settings.logo != blank -%}
            {%- assign desktop_size = section.settings.logo_desktop_width | append: 'x' -%}
            {%- assign mobile_size = section.settings.logo_mobile_width | append: 'x' -%}
            <picture class="{{ cn }}-logo-img">   
                <source srcset="{{ section.settings.logo | img_url: desktop_size }}, {{ section.settings.logo | img_url: desktop_size, scale: 2 }} 2x" media="(min-width: 992px)">
                <source srcset="{{ section.settings.logo | img_url: mobile_size }}, {{ section.settings.logo | img_url: mobile_size, scale: 2 }} 2x" media="(max-width: 992px)">
                <img src="{{ section.settings.logo | img_url }}" width="{{ section.settings.logo.width }}" height="{{ section.settings.logo.height }}" alt="{{ shop.name | escape }}">
            </picture>
        {%- else -%}
            <h2 class="{{ cn }}-logo-heading">{{ shop.name }}</h2>
        {%- endif -%}
    </div>
{%- endcapture -%}

{% capture Nav %}
    {% if section.blocks.size != 0 %}
        <div class="{{ cn }}-nav">
            {% render 'main-nav',
                items: section.blocks
            %}
        </div>
    {% endif %}
{% endcapture %}

{% if settings.search_hotkey_enable %}
    {%- capture Search_hotkey -%}
        <search-hotkey
            class="{{ cn_s }}-hotkey {% if section.settings.search_as_icon %}@modal-search{% endif %}"
            section-id="{{ section.id }}"
            {% if section.settings.search_as_icon %}modal-search{% endif %}
        >
        {% if section.settings.search_as_icon %}
            <span class="{{ cn_s }}-hotkey-placeholder" data-element="placeholder">CTRL + K</span>
        {% endif %}
            <kbd data-element="content" hidden>
                <span class="{{ cn_s }}-hotkey-icon" data-element="cmd-icon" hidden>{% render 'icon', name: 'command' %}</span>
                <span class="{{ cn_s }}-hotkey-ctrl" data-element="ctrl-text" hidden>CTRL</span>
                <span>+</span>
                <span>K</span>
            </kbd>
        </search-hotkey>
    {%- endcapture -%}
{%- endif -%}

{% capture Searchbar_popup %}
    <div class="{{ cn_s }}-popup">

        {% capture Searchbar_popup_content %}
            <div class="{{ cn_s }}-popup-content">
                <div class="#container">
                    <div class="{{ cn_s }}-popup-inner">
                        {%- render 'main-searchbar',
                            id: 'main-searchbar-popup',
                            search_as_icon: section.settings.search_as_icon,
                            search_hotkey_node: Search_hotkey,
                            cn: cn_s
                        -%}
                        <modal-close class="{{ cn_s }}-popup-close mobile-hidden" section-id="{{ section.id }}">
                            {% render 'icon', name: 'x' %}
                        </modal-close>
                    </div>
                </div>
            </div>
        {% endcapture %}
        {% render 'modal',
            content: Searchbar_popup_content,
            id: searchbar_popup_id,
            y: 'top',
            width: '100%',
            show_close: false,
            animation: 'top'
        %}
    </div>
{% endcapture %}

{% if section.settings.search_as_icon %}
    {% capture Search_icon %}
        <div tabindex="0" target="{{ searchbar_popup_id }}" section-id="{{ section.id }}">
            <div class="{{ cn_t }}-item">
                <div class="{{ cn_t }}-item-icon">
                    {% render 'icon', name: "magnifying-glass" %}
                </div>
                <div class="{{ cn_t }}-item-info">
                    <p class="{{ cn_t }}-item-subtitle">{{ 'sections.header.store' | t }}</p>
                    <p class="{{ cn_t }}-item-title">
                        {% if settings.search_hotkey_enable %}
                            {{ Search_hotkey }}
                        {% else %}
                            {{ 'sections.header.search' | t }}
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    {% endcapture %}
{% endif %}

{% if section.settings.search_as_icon == false %}
    {% capture Searchbar %}
        {%- render 'main-searchbar',
            id: 'main-searchbar',
            search_as_icon: section.settings.search_as_icon,
            search_hotkey_node: Search_hotkey,
            cn: cn_s
        -%}
    {% endcapture %}
{% endif %}


{% capture Toolbar %}
    {% assign cn_t = cn | append: '-toolbar' %}
    <div class="{{ cn_t }} @layout:{{ section.settings.toolbar }}">
        {% if app_block != blank %}
            <div class="{{ cn_t }}-item">
                {% render app_block %}
            </div>
        {% endif %}
        {% if center_search == false %}
            {% if Search_icon != blank %}
                {{ Search_icon }}
            {% else %}
                {{ Searchbar }}
            {% endif %}
        {% endif %}
        {%- if section.settings.show_language_selector and localization.available_languages.size > 1 -%}
            {%- capture Language_toolbar -%}
                <div class="{{ cn_t }}-item">
                    <div class="{{ cn_t }}-item-icon">
                        {%- if section.settings.toolbar == 'only_icons' -%}
                            {{ localization.language.iso_code | upcase }}
                        {%- else -%}
                            {% render 'icon', name: 'globe' %}
                        {%- endif -%}
                    </div>
                    <div class="{{ cn_t }}-item-info">
                        <p class="{{ cn_t }}-item-subtitle">{{ 'sections.header.language' | t }}</p>
                        <p class="{{ cn_t }}-item-title">
                            {{ localization.language.iso_code | upcase }}
                            {% render 'icon', name: 'angle-down' %}    
                        </p>
                    </div>
                </div>
            {%- endcapture -%}
            {% render 'localization-dropdown',
                toggle: Language_toolbar,
                placement: 'bottom',
                src: 'language',
                prefix: localization_prefix,
                lights_off: settings.header_lights_off
            %}
        {%- endif -%}
        {%- if section.settings.show_country_selector and localization.available_countries.size > 1 -%}
            {%- capture Country_toolbar -%}
                <div class="{{ cn_t }}-item">
                    <img class="{{ cn_t }}-item-icon" width="512" height="512" src="https://flagicons.lipis.dev/flags/1x1/{{ localization.country.iso_code | downcase }}.svg" alt="{{ 'localization.country_label' | t }}"/>
                    <div class="{{ cn_t }}-item-info">
                        <p class="{{ cn_t }}-item-subtitle">{{ 'sections.header.country' | t }}</p>
                        <p class="{{ cn_t }}-item-title">
                            {{ localization.country.currency.iso_code }}
                            {% render 'icon', name: 'angle-down' %}
                        </p>
                    </div> 
                </div>
            {%- endcapture -%}
            {% render 'localization-dropdown',
                toggle: Country_toolbar,
                placement: 'bottom',
                src: 'country',
                prefix: localization_prefix,
                lights_off: settings.header_lights_off
            %}
        {%- endif -%}
        {%- if section.settings.show_account_link and shop.customer_accounts_enabled -%}
            <div class="{{ cn_t }}-item">
                <a class="stretched-link" href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">{{ 'customer.account.title' | t }}</a>
                <div class="{{ cn_t }}-item-icon">
                    {% render 'icon', name: "user" %}
                </div>
                <div class="{{ cn_t }}-item-info">
                    <p class="{{ cn_t }}-item-subtitle">{{ 'sections.header.account' | t }}</p>
                    <p class="{{ cn_t }}-item-title">
                        {%- if customer -%}
                        {{ 'sections.header.my_account' | t }}
                        {%- else -%}
                        {{ 'sections.header.login' | t }}
                        {%- endif -%}
                    </p>
                </div>
            </div>
        {%- endif -%}
        {%- comment -%}
            {%- if section.settings.wishlist_link != blank -%}
                <div class="{{ cn_t }}-item">
                    <a class="stretched-link" href="{{ section.settings.wishlist_link }}"></a>
                    <div class="{{ cn_t }}-item-icon">
                        {% render 'icon', name: "heart" %}
                    </div>
                    <div class="{{ cn_t }}-item-info">
                        <p class="{{ cn_t }}-item-subtitle">
                            {{ 'sections.header.my' | t }}
                        </p>
                        <p class="{{ cn_t }}-item-title">
                            {{ 'sections.header.wishlist' | t }}
                        </p>
                    </div>
                </div>
            {%- endif -%}
        {%- endcomment -%}
        <modal-open tabindex="0" target="cart-drawer" fallback="{{ routes.cart_url }}" section-id="{{ section.id }}">
            {% if section.settings.show_cart_counter and cart.item_count > 0 %}
                {% assign show_cart_counter = true %}
            {% endif %}
            <cart-live-region class="{{ cn_t }}-item" section-id="{{ section.id }}" id="cartCounter-{{ section.id }}">
            <div class="{{ cn_t }}-item-icon">
                {% render 'icon', name: section.settings.cart_icon %}
                {% if show_cart_counter %}
                    <span class="{{ cn_t }}-cart-counter">{{ cart.item_count }}</span>
                {% endif %}
            </div>
            <div class="{{ cn_t }}-item-info">
                {%- liquid 
                    assign cart_total = cart.total_price | money_without_trailing_zeros
                    assign cart_icon_title = 'templates.cart.cart' | t
                    if section.settings.show_cart_total
                        if section.settings.toolbar == 'title_bottom'
                            assign cart_icon_title = cart_total
                        elsif section.settings.toolbar == 'with_subtitle'
                            assign cart_icon_subtitle = cart_icon_title
                            assign cart_icon_title = cart_total
                        else
                            assign cart_icon_title = cart_icon_title | append: ' (' | append: cart_total | append: ')' 
                        endif
                    endif
                -%}
                {% if cart_icon_subtitle %}
                    <p class="{{ cn_t }}-item-subtitle">{{ cart_icon_subtitle }}</p>
                {% endif %}
                <p class="{{ cn_t }}-item-title">
                    {{ cart_icon_title }}
                    {% if section.settings.toolbar == 'no_icons' and show_cart_counter %}
                        ({{ cart.item_count }})
                    {% endif %}
                </p>
            </div>
            </cart-live-region>
        </modal-open>
    </div>
{% endcapture %}


{% capture Desktop %}
    <div class="{{ cn }}-inner mobile-hidden">
        {% capture Logo %}
            <div class="{{ cn }}-part">
                {{ Logo }}
            </div>
        {% endcapture %}

        {% unless section.settings.layout == "center_logo"  %}
            {{ Logo }}
        {% endunless %}

        <div class="{{ cn }}-part">
            {% if Nav != blank %}
                {{ Nav }}
            {% endif  %}
            {% if center_search %}
                {% if Search_icon != blank %}
                    <div class="{{ cn_t }} @layout:{{ section.settings.toolbar }} @left">
                        {{ Search_icon }}
                    </div>
                {% else %}
                    {{ Searchbar }}
                {% endif %}
            {% endif %}
        </div>

        {% if section.settings.layout == "center_logo" %}
            {{ Logo }}
        {% endif %}
        
        <div class="{{ cn }}-part">
            {{ Toolbar }}
        </div>
    </div>    
{% endcapture %}


{% capture Mobile %}
    <div class="{{ cn }}-inner-mobile desktop-hidden">
        <div class="{{ cn }}-mobile-part">
            <modal-open target="{{ mobile_drawer_id }}" class="{{ cn }}-mobile-link" section-id="{{ section.id }}">
                {% render 'icon', name: 'burger' %}
            </modal-open>
        </div>
        <div class="{{ cn }}-mobile-part">
            {{ Logo }}
        </div>
        <div class="{{ cn }}-mobile-part">
            <div class="{{ cn }}-mobile-toolbar">
                <div class="{{ cn }}-mobile-link #search-box" section-id="{{ section.id }}" id="df-search-icon">
                    {% render 'icon', name: 'magnifying-glass' %}
                </div>
                <modal-open target="cart-drawer" fallback="{{ routes.cart_url }}" class="{{ cn }}-mobile-link" section-id="{{ section.id }}">
                    {% render 'icon', name: section.settings.cart_icon %}
                    {% if section.settings.show_cart_counter %}
                        <cart-live-region class="{{ cn }}-mobile-cart-counter" section-id="{{ section.id }}" id="cartMobileCounter-{{ section.id }}">
                            {%- if cart.item_count > 0 -%}
                                {{ cart.item_count }}
                            {%- endif -%}
                        </cart-live-region>
                    {% endif %}
                </modal-open>
            </div>
        </div>
    </div>
{% endcapture %}


{% capture Mobile_drawer_content %}
    <div class="{{ cn }}-mobile-drawer-content">
       {% render 'main-nav-mobile',
            header: true,
            items: section.blocks,
            app_block: app_block
       %}
    </div>
{% endcapture %}

{% capture Mobile_drawer %}
    <div class="{{ cn }}-mobile-drawer">
        {% render 'modal',
            id: mobile_drawer_id,
            height: '100%',
            width: 'fit-content',
            animation: 'left',
            content: Mobile_drawer_content,
            show_close: false
        %}
    </div>
{% endcapture %}

<div 
    class="{{ cn }} @layout:{{ section.settings.layout }} {% if section.settings.enable_sticky_header %}@sticky{% endif %}"
    style="{% if settings.search_product_type_enable %}--{{ NS }}-product-type-selector-width: 25%;{% endif %}"
    id="{{ header_id }}"
>
    <div class="#container @width:{{ settings.header_layout }}">
        {{ Desktop }}
        {{ Mobile }}
    </div>
    {{ Searchbar_popup }}
    {{ Mobile_drawer }}
</div>

{% if settings.search_hotkey_enable %}
    <script type="module" src="{{ 'search-hotkey.js' |  asset_url }}"></script>
{% endif %}
{% if settings.search_voice_enable %}
    <script type="module" src="{{ 'voice-search.js' |  asset_url }}"></script>
{% endif %}

{% if section.settings.enable_sticky_header %}
    <script defer>
        const header = document.querySelector('#{{ header_id }}');

        function setHeaderHeightVar(height) {
            document.documentElement.style.setProperty('--header-height', height);
        }

        const resizeObs = new ResizeObserver(([ entry ]) => {
            setHeaderHeightVar(`${Math.floor(entry.contentBoxSize[0].blockSize)}px`)
        });

        resizeObs.observe(header)
    </script> 
{% endif %}

<script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "Organization",
      "name": {{ shop.name | json }},
      {% if section.settings.logo %}
        {% assign image_size = section.settings.logo.width | append: 'x' %}
        "logo": {{ section.settings.logo | img_url: image_size | prepend: "https:" | json }},
      {% endif %}
      "sameAs": [
        {{ settings.social_twitter_link | json }},
        {{ settings.social_facebook_link | json }},
        {{ settings.social_pinterest_link | json }},
        {{ settings.social_instagram_link | json }},
        {{ settings.social_tiktok_link | json }},
        {{ settings.social_tumblr_link | json }},
        {{ settings.social_snapchat_link | json }},
        {{ settings.social_youtube_link | json }},
        {{ settings.social_vimeo_link | json }}
      ],
      "url": {{ request.origin | append: page.url | json }}
    }
</script>
  
{%- if request.page_type == 'index' -%}
    {% assign potential_action_target =  request.origin | append: routes.search_url | append: "?q={search_term_string}" %}
    <script type="application/ld+json">
        {
        "@context": "http://schema.org",
        "@type": "WebSite",
        "name": {{ shop.name | json }},
        "potentialAction": {
            "@type": "SearchAction",
            "target": {{ potential_action_target | json }},
            "query-input": "required name=search_term_string"
        },
        "url": {{ request.origin | append: page.url | json }}
        }
    </script>
{%- endif -%}

