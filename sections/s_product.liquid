{%- liquid
    assign variant = product.selected_or_first_available_variant
    assign no_params_product_url = product.url | split: '?' | first
    assign product_form_id = 'productForm' | append: section.id
    assign cn = '#product'
    
    assign gap = 'calc(var(--glob-gutter) * 2)'
    assign gallery_width = section.settings.gallery_width

    assign bg_color = settings.color_scheme.settings.background_gradient | default: settings.color_scheme.settings.background | upcase
    assign fg_color = settings.color_scheme.settings.background | color_lighten: 10 | upcase

    if settings.design_bg_pattern_show
        assign section_drop_shadow = true
        if section.settings.use_surface_color_for_bg
            assign section_force_bg_color = fg_color
        else
            assign section_force_bg_color = bg_color
        endif
    elsif section.settings.use_surface_color_for_bg and bg_color != fg_color
        assign section_drop_shadow = true
        assign section_force_bg_color = fg_color
    endif

    assign product_has_media = false
    if product.media.size > 0
        assign product_has_media = true
    endif
    
-%}
<style>
  .custom-selector{
    display:flex;
    justify-content: space-between;
    gap:2em;
  }
  .mt-15{
    margin-top: 15px;
  }
  .w-100{
    width: 100%;
  }
  
  @media (max-width: 991px){
.custom-selector{
    display:block;
  }
.\#product-variant-selector{
      margin-bottom: 2em;
    }
  }
</style>

<div id="complementary_product_anchor-{{ product.id }}"></div>
{%- capture gallery_image_srcsize_desktop -%}min(100vw, {{ settings.container_width }}px) * {{ gallery_width | divided_by: 100.0 }} - 70px - 1.5rem{%- endcapture -%}
{%- capture gallery_image_srcsize_mobile -%}90vw{%- endcapture -%}

{% assign variants_array = "" %}

{% for variant in product.variants %}
    {% assign metafield_description = variant.metafields.custom.technical_info %}
    {% assign specification_colour = variant.metafields.custom.specification_colour %}
    {% assign specification_diameter = variant.metafields.custom.specification_diameter %}
    {% assign specification_length = variant.metafields.custom.specification_length %}
    {% assign specification_material = variant.metafields.custom.specification_material %}
    {% assign specification_unit_of_measure = variant.metafields.custom.specification_unit_of_measure %}
    {% assign specification_approvals = variant.metafields.custom.specification_approvals %}
    {% assign specification_diameter_1 = variant.metafields.custom.specification_diameter_1 %}
    {% assign specification_diameter_2 = variant.metafields.custom.specification_diameter_2 %}
    {% assign download_link = variant.metafields.custom.download_link | metafield_tag %}
    {% assign variant_title = variant.title %}
    {% assign variant_meta_title = variant.metafields.custom.variant_title %}
    {% assign variant_object = "{ 'title': '" | append: variant_title | append: "',
    'specification_colour': '" | append: specification_colour | append: "',
    'specification_diameter': '" | append: specification_diameter | append: "',
    'specification_length': '" | append: specification_length | append: "',
    'specification_unit_of_measure': '" | append: specification_unit_of_measure | append: "',
    'specification_approvals': '" | append: specification_approvals | append: "',
    'specification_material': '" | append: specification_material | append: "',
    'specification_diameter_1': '" | append: specification_diameter_1 | append: "',
    'specification_diameter_2': '" | append: specification_diameter_2 | append: "',
    'download_link': '" | append: download_link | append: "',
    'variant_title': '" | append: variant_meta_title | append: "',
    'description': '" | append: metafield_description | append: "' }" %}
    
    {% if forloop.first %}
        {% assign variants_array = variants_array | append: variant_object %}
    {% else %}
        {% assign variants_array = variants_array | append: ", " | append: variant_object %}
    {% endif %}
{% endfor %}

<script>
    var variantsArray = [{{ variants_array | strip_newlines }}];
</script>

{%- if product_has_media -%}
    {%- capture Gallery -%}
        {% render 'product-gallery' 
            image_expand: section.settings.image_expand,
            image_srcsize_desktop: gallery_image_srcsize_desktop,
            image_srcsize_mobile: gallery_image_srcsize_mobile,
            enable_image_zoom: section.settings.enable_image_zoom,
            gallery_type: section.settings.gallery_type,
            gallery_position: section.settings.gallery_position,
            autoplay_video: section.settings.autoplay_video,
            show_wishlist_button: section.settings.show_wishlist_button
        %}
    {%- endcapture -%}
{%- endif -%}

{%- capture Product_specs -%}
    {% if section.settings.show_product_specs %}
        {% render 'product-specs',
            specs: section.settings.product_specs,
            use_expand: section.settings.specs_use_expand    
        %}
    {% endif %}
{%- endcapture -%}

{% capture Product_bundle %}
    {% if section.settings.show_product_bundle %}
        {% render 'product-bundle',
            product: product,
            current_variant: variant,
            heading: section.settings.product_bundle_heading,
            variant_selector: section.settings.product_bundle_variant_selector 
        %}
    {% endif %}
{% endcapture %}

{%- capture Meta -%}
    <div class="{{ cn }}-meta {% if section.settings.gallery_type == 'scrollable' or section.settings.gallery_type == 'scrollable_without_thumbs' %}@sticky{% endif %}" data-element="product-meta">
        {% render 'product-info-loading' %}
        {% for block in section.blocks %}
            {%- capture Block_content -%}
            {% case block.type %}
                {% when 'countdown' %}
                    {% render 'product-countdown',
                        product: product,
                        scale: block.settings.text_scale,
                        use_sale_price_color: block.settings.use_sale_price_color
                    %}
                {% when 'buy_with' %}
                    {% render 'product-buy-with', 
                        product: product
                    %}
                {% when 'title' %}
                    {% render 'product-title',
                        product: product,
                        title_scale: block.settings.heading_scale,
                        show_wishlist_button: block.settings.show_wishlist_button,
                        truncate_text: block.settings.enable_text_truncation,
                        truncate_lines: block.settings.max_lines,
                        badges_display: block.settings.badges_display,
                        badges_scale: block.settings.badges_scale
                        show_low_stock: block.settings.show_low_stock
                    %}
                {% when 'price' %}
                    {% render 'load-css', file: 'product-price' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}">
                        {% render 'product-price',
                            product: product,
                            show_taxes: block.settings.show_taxes,
                            text_scale: block.settings.text_scale,
                            show_savings: block.settings.show_savings,
                            show_titles: block.settings.show_titles,
                            variant: variant,
                            bold_text: block.settings.bold_text,
                            load_styles: false
                        %}
                    </product-variant-listener>

              {% when 'vat' %}
              {% if localization.country.iso_code == 'GB' %}
                    {% render 'load-css', file: 'product-vat' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}">
                        {% render 'product-vat',
                            product: product,
                            show_taxes: block.settings.show_taxes,
                            text_scale: block.settings.text_scale,
                            show_savings: block.settings.show_savings,
                            show_titles: block.settings.show_titles,
                            variant: variant,
                            bold_text: block.settings.bold_text,
                            load_styles: false
                        %}
                    </product-variant-listener>
                {% endif %}
              
                {% when 'buy_buttons' %}
              
            {%- if section.settings.sticky_add_to_cart -%}
                {% render 'sticky-add-to-cart',
                    product: product,
                    current_variant: variant, 
                    product_form_id: product_form_id,
                    position: section.settings.sticky_add_to_cart_position
                %}
            {%- endif -%}
     
           <div class="custom-selector">
                {%- render 'product-qty-selector', 
                    id: block.id, 
                    product_form_id: product_form_id,
                    type: block.settings.input_type,
                    variant: variant
                -%}
                <div class="w-100 mt-15">
                    {%- render 'product-form', 
                        variant: variant, 
                        product_form_id: product_form_id,
                        id: block.id,
                        use_stock_notifier: block.settings.enable_stock_notifier,
                        show_dynamic_checkout: block.settings.show_dynamic_checkout,
                        show_wishlist_button: block.settings.show_wishlist_button,
                        show_payment_methods: block.settings.show_payment_methods,
                        show_gift_card_recipient: block.settings.show_gift_card_recipient
                    -%}
                </div>
            </div>
            <div class="w-100 mt-15">
                <button
                    class="#button @tier:primary @display-style:outline @size:lg @block #swym-add-to-wishlist-button product_{{ product.id }}"
                    style=""
                    data-with-epi="true"
                    data-swaction="addToWishlist"
                    data-product-id="{{ product.id }}"
                    data-variant-id="{{ product.variants[0].id }}"
                    data-product-url="{{ shop.url }}{{ product.url }}">
                    <span class="add">{{ 'products.product.swym.add_to_wishlist' | t }}</span>
                    <span class="added">{{ 'products.product.swym.added_to_wishlist' | t }}</span>
                </button>
            </div>
               
                {% when 'variant_selector' %}
           
                    {%- unless product.has_only_default_variant -%}
                        {% render 'product-variant-selector', 
                            picker_type: block.settings.picker_type,
                            color_swatches: block.settings.color_swatches,
                            buttons_columns: block.settings.swatches_grid_columns,
                            price_display: block.settings.price_display,
                            product_form_id: product_form_id,
                            show_variant_image: block.settings.show_variant_image,
                            show_stock_alert: block.settings.show_stock_alert,
                            variant: variant,
                            block_id: block.id
                        %}
                    {%- endunless -%}  

                {% when 'quantity_selector' %}
                    {%- render 'product-qty-selector', 
                        id: block.id, 
                        product_form_id: product_form_id,
                        type: block.settings.input_type,
                        variant: variant
                    -%}
            {% when 'variant_quantity_selector' %}
               {%- unless product.has_only_default_variant -%}
              <div class="custom-selector">
                        {% render 'product-variant-selector', 
                            picker_type: block.settings.picker_type,
                            color_swatches: block.settings.color_swatches,
                            buttons_columns: block.settings.swatches_grid_columns,
                            price_display: block.settings.price_display,
                            product_form_id: product_form_id,
                            show_variant_image: block.settings.show_variant_image,
                            show_stock_alert: block.settings.show_stock_alert,
                            variant: variant,
                            block_id: block.id
                        %}
                      {%- render 'product-qty-selector', 
                        id: block.id, 
                        product_form_id: product_form_id,
                        type: block.settings.input_type,
                        variant: variant
                    -%}
              </div>
                         {%- endunless -%}  
                {% when 'sku' %}
                    <product-variant-listener section-id="{{ section.id }}" emptyable id="b-{{ block.id }}" style="font-weight: 700;">
                        {%- if variant.sku != blank -%}
                            {{ 'customer.order.sku' | t }}: {{ variant.sku }}
                        {%- endif -%}
                    </product-variant-listener>


                {% when 'stock_alert' %}
                    {%- if block.settings.show_stock_alert -%}
                        {%- assign stock_threshold = settings.stock_threshold -%}
                    {%- endif -%}
                    {% render 'load-css', file: 'product-stock-alert' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}">
                        {%- render 'product-stock-alert',
                            id: block.id,
                            product: product,
                            stock_threshold: stock_threshold,
                            actual_inventory: block.settings.actual_inventory
                        -%}
                    </product-variant-listener>

                {% when 'pickup_availability' %}
                    {% render 'load-css', file: 'product-pickup-availability' %}
                    <product-variant-listener section-id="{{ section.id }}" emptyable id="b-{{ block.id }}">
                        {%- render 'product-pickup-availability'
                            product: product,
                            id: block.id,
                            variant: variant
                        -%}    
                    </product-variant-listener>
                
                {% when 'feature' %}
                    {% render 'product-feature',
                        icon: block.settings.icon,
                        heading: block.settings.heading,
                        subheading: block.settings.subheading
                    %}

                {% when 'description' %}
                    {% capture product_description %}
                        {% render 'cut-sku-from-product-description', description: product.description %}
                    {% endcapture %}
                    {% if product_description != blank %}
                        {%- capture description -%}
                            {%- assign size_unit = block.settings.font_scale | times: 1.0 -%}
                            {%- assign size_unit = size_unit | divided_by: 100 -%}
                            <div class="#rte" style="--font-size: {{ size_unit }}rem;">
                                {{ product_description }}
                            </div>
                        {%- endcapture -%}
                        {%- if block.settings.use_expand and product_description.size > 170 -%}
                            {% render 'product-description-expand', description: description %}
                        {%- else -%}
                        {{ description }}
                        {%- endif -%}
                    {% endif %}

                {% when 'rating' %}
                    {% if block.settings.show_count %}
                        {% assign count = product.metafields.reviews.rating_count %}
                    {% endif %}
                    {% render 'star-rating', 
                        value: product.metafields.reviews.rating.value,
                        count: count,
                        show_count_title: true
                    %}
                    
                {% when 'separator' %}
                    <hr class="{{ cn }}-meta-block-separator">
                
                {% when 'text' %}
                    {% if block.settings.text != blank %}
                        <div class="#rte-block {% if block.settings.text_uppercase %}@upcase{% endif %} fs-{{ block.settings.size }}">
                            {{ block.settings.text }}
                        </div>
                    {% endif %}

                {% when 'popup' %}
                    {% if block.settings.text != blank %}
                        {%- assign font_size = block.settings.font_size_scale | times: 0.01 -%}
                        {%- assign modal_id = 'productPopup' | append: section.id | append: block.id -%}
                        {% capture Modal_content %}  
                            <div class="{{ cn }}-popup-content">
                                <div class="#container">
                                    <div class="{{ cn }}-popup-content-inner" style="--width: {{ block.settings.content_width }}%;">
                                        {%- if block.settings.page != blank -%}
                                            <div class="#rte" style="--font-size: {{ font_size }}rem;">
                                                {% if block.settings.show_page_title %}
                                                    <h1>{{ block.settings.page.title }}</h1>
                                                {% endif %}
                                                {{ block.settings.page.content }}
                                            </div>
                                        {%- else -%}
                                            {%- if request.design_mode -%}
                                                {% render 'editor-notification',
                                                    t_heading: 'products.product.popup.no_page'
                                                %}
                                            {%- endif -%} 
                                        {%- endif -%}
                                    </div>
                                </div>
                            </div>
                        {%- endcapture -%}
                        <div class="{{ cn }}-popup">
                            {% render 'modal',
                                content: Modal_content,
                                id: modal_id,
                                show_close: true,
                            %}
                        </div>
                        {%- if block.settings.page != blank or request.design_mode -%}
                            {%- capture Link -%}
                                <modal-open 
                                    class="styled-link" 
                                    target="{{ modal_id }}"
                                    section-id="{{ section.id }}"
                                >
                                    {{ block.settings.text }}
                                </modal-open>
                            {%- endcapture -%}
                            {%- if block.settings.icon != blank -%}
                                <div class="{{ cn }}-popup-link">
                                    {% if block.settings.icon != 'none' %}
                                        {% render 'icon', name: block.settings.icon, load: true %}
                                    {% endif %}
                                    {{ Link }}
                                </div>
                            {%- else -%}
                                {{ Link }}
                            {%- endif -%}
                        {%- endif -%}
                    {% endif %}

                {% when 'share' %}
                    {% render 'share',
                        share_permalink: product.url,
                        share_title: product.title,
                        share_image: product.featured_image,
                        use_brand_colors: block.settings.use_colors
                    %}

                {% when 'contact_popup' %}
                    {% if block.settings.text != blank %}
                        {%- assign modal_id = 'productPopup' | append: section.id | append: block.id -%}
                        {% capture Modal_content %}  
                            <div class="{{ cn }}-popup-content">
                                <div class="{{ cn }}-popup-content-inner" style="--width: 100%;">
                                    {%- render 'product-question',
                                        product: product
                                    -%}
                                </div>
                            </div>
                        {%- endcapture -%}
                        <div class="{{ cn }}-popup">
                            {% render 'modal',
                                content: Modal_content,
                                id: modal_id,
                                show_close: true,
                                width: 'min(450px, 90vw)',
                            %}
                        </div>
                        {%- capture Link -%}
                            <modal-open 
                                class="styled-link" 
                                target="{{ modal_id }}"
                                section-id="{{ section.id }}"
                            >
                                {{ block.settings.text }}
                            </modal-open>
                        {%- endcapture -%}
                        {%- if block.settings.icon != blank -%}
                            <div class="{{ cn }}-popup-link">
                                {% if block.settings.icon != 'none' %}
                                    {% render 'icon', name: block.settings.icon, load: true %}
                                {% endif %}
                                {{ Link }}
                            </div>
                        {%- else -%}
                            {{ Link }}
                        {%- endif -%}
                    {% endif %}

                {% when 'custom_html' %}
                    {% if block.settings.html != blank %}
                        {% if block.settings.heading != blank %}
                            <h5>{{ block.settings.heading }}</h5>
                        {% endif %}
                        <div>{{ block.settings.html }}</div>
                    {% endif %}

                {% when 'custom_liquid' %}
                    {% if block.settings.liquid_content  != blank %}
                        {% if block.settings.heading != blank %}
                            <h5>{{ block.settings.heading }}</h5>
                        {% endif %}
                        <div>{{ block.settings.liquid_content  }}</div>
                    {% endif %}
 
                {% when 'product_options_list' %}
                    {%- unless product.has_only_default_variant -%}
                        {%- render 'product-options-list',
                            show_sku: block.settings.show_sku,
                            id: block.id,
                            product: product,
                            enable_sorting: block.settings.enable_sorting,
                            enable_stock_sort: block.settings.enable_stock_sort
                        -%}
                    {% endunless %}

                {% when 'custom_image' %}
                    {% if block.settings.heading != blank %}
                        <h5>{{ block.settings.heading }}</h5>
                    {% endif %}
                    {% if block.settings.image != blank %}
                        <div class="{{ cn }}-custom-image" style="--image-width: {{ block.settings.max_width }}%;">
                            {% render 'media',
                                image: block.settings.image,
                                link: block.settings.link
                            %}
                        </div>
                    {% endif %}
                {% when '@app' %}
                    {% render block %}
                    
                {% when 'specs' %}
                    {% render 'product-specs', specs: block.settings.specs %}
                {% when 'custom_property' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}" emptyable>
                        {%- assign property_input_id = 'property-' | append: block.settings.name | append: block.id -%}
                        {%- capture Input_atts -%}
                            name="properties[{{ block.settings.name | escape }}]"
                            type="text"
                            form="{{ product_form_id }}"
                        {%- endcapture -%}
                        {%- render 'form-field',
                            id: property_input_id,
                            as: 'input',
                            input_atts: Input_atts,
                            label: block.settings.name
                        -%}
                    </product-variant-listener>
                {% else %}
                    {% if block.type contains 'collapsible_tab' %}
                        {% render 'product-collapse',
                            block: block,
                            product: product
                        %}
                    {% endif %}
            {% endcase %}
            {%- endcapture -%}
            {% if Block_content != blank %}
                <div class="{{ cn }}-meta-block {% if block.settings.prev_attach %}@attach{% endif %} {% if block.type contains 'collapsible_tab' %}@collapse collapsible-block{% endif %}" data-meta-block {{ block.shopify_attributes }}>
                    {% if block.settings.meta_heading != blank %}
                        <h4 class="{{ cn }}-meta-heading">{{ block.settings.meta_heading }}</h4>
                    {% endif %}
                    {{ Block_content }}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{%- endcapture -%}

{%- capture Content -%}
    <product-variant-provider 
        product-url="{{ product.url }}" 
        section-id="{{ section.id }}" 
        {% if request.page_type == 'product' %} product-page {% endif %} 
        initial-variant-id="{{ variant.id }}"
        initial-image-position="{{ variant.featured_media.position }}"
        initial-selling-plan="{{ variant.selected_selling_plan_allocation.selling_plan.id }}"
        >
        <div class="{{ cn }} {% if section.settings.show_divider and product_has_media %}@show-divider{% endif %}" id="productPageContainer-{{ section.id }}">
            {% render 'load-css', file: 'product' %}
            {% capture Grid_template %}
                {% if section.settings.gallery_position == 'left' %}
                    {{ gallery_width }}% minmax(0, 1fr)
                {% else %}
                    minmax(0, 1fr) {{ gallery_width }}%
                {% endif %}
            {% endcapture %}
            {% capture Gallery_with_bundle_media %}
                <div class="{{ cn }}-media {% if section.settings.gallery_position == 'right' %} mob-first-item {% endif %}{% if product_has_media == false %}@no-media{% endif %}">    
                    {%- if settings.show_breadcrumb_nav -%}
                        {% render 'breadcrumbs' %}
                    {%- endif -%}
                    {{ Gallery }}
                    {{ Product_specs }}
                    {{ Product_bundle }}
                </div>
            {% endcapture %}
            {% capture Meta_media %}
                <div class="{{ cn }}-media">    
                    {{ Meta }}
                </div>
            {% endcapture %}
            <div class="#grid @type:template {{ cn }}-grid" style="--template: {{ Grid_template }}; --template-mobile: none; --gap: {{ gap }};">                
                {% if section.settings.gallery_position == 'left' %}
                    {{ Gallery_with_bundle_media }}
                    {{ Meta_media }}
                {% else %}
                    {{ Meta_media }}
                    {{ Gallery_with_bundle_media }}
                {% endif %}
            </div>
        </div>
    </product-variant-provider>
    <script type="module" src="{{ 'product-variant-listener.js' | asset_url }}"></script>
    <script type="module" src="{{ 'product-variant-provider.js' | asset_url }}"></script>
    <script type="module" src="{{ 'product-form.js' | asset_url }}"></script>
  {%- endcapture -%}

{% render 'section-body',
    content: Content,
    container: section.settings.layout,
    force_bg_color: section_force_bg_color,
    shadow: section_drop_shadow
%}

{% render 'browsing-history-track' %}

{%- liquid
    if product.selected_or_first_available_variant.featured_media
        assign seo_media = product.selected_or_first_available_variant.featured_media
    else
        assign seo_media = product.featured_media
    endif
-%}
  
<script type="application/ld+json">
    {
        "@context": "http://schema.org/",
        "@type": "Product",
        "name": {{ product.title | json }},
        "url": {{ request.origin | append: product.url | json }},
        {% if seo_media -%}
            "image": [
                {{ seo_media | image_url: width: 1920 | prepend: "https:" | json }}
            ],
        {%- endif %}
        "description": {{ product_description | strip_html | json }},
        {% if product.selected_or_first_available_variant.sku != blank -%}
            "sku": {{ product.selected_or_first_available_variant.sku | json }},
        {%- endif %}
        "brand": {
            "@type": "Brand",
            "name": {{ product.vendor | json }}
        },
        "offers": [
            {%- for variant in product.variants -%}
                {
                    "@type" : "Offer",
                    {%- if variant.sku != blank -%}
                        "sku": {{ variant.sku | json }},
                    {%- endif -%}
                    {%- if variant.barcode.size == 12 -%}
                        "gtin12": {{ variant.barcode }},
                    {%- endif -%}
                    {%- if variant.barcode.size == 13 -%}
                        "gtin13": {{ variant.barcode }},
                    {%- endif -%}
                    {%- if variant.barcode.size == 14 -%}
                        "gtin14": {{ variant.barcode }},
                    {%- endif -%}
                    "availability" : "http://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
                    "price" : {{ variant.price | divided_by: 100.00 | times: 1.2 | round: 2 | json }},
                    "priceCurrency" : {{ cart.currency.iso_code | json }},
                    "url" : {{ request.origin | append: variant.url | json }},
                    "priceValidUntil": "{{ 'now' | date: '%s' | plus: days_price_valid_until | date: '%Y-%m-%d'}}"
                }{% unless forloop.last %},{% endunless %}
            {%- endfor -%}
        ]
    }
</script>

<script>
    let collapsibleArray = document.querySelectorAll('.collapsible-block');
    let techBlock, specBlock, linkBlock, prodInfoBlock;
    collapsibleArray.forEach(colBlock => {
