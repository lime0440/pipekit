{%- liquid
    assign image_width = section.settings.image_width

    if section.settings.section_layout == 'offset'
        if section.settings.image_position == 'right'
            assign section_layout = 'offset-left'
        else
            assign section_layout = 'offset-right'
        endif
    else
        assign section_layout = section.settings.section_layout
    endif
    unless section.settings.image_size == 'origin'
        assign image_height = section.settings.image_size
    endunless
    assign popup_id = 'VideoPopup-' | append: section.id
    assign video = section.settings.hosted_video | default: section.settings.embedded_video

    if section.settings.section_layout == 'container'
        assign curved = true
    endif

    if curved
        if section.settings.color_scheme == settings.color_scheme and section.settings.pattern == 'none'
            assign curved = false
            assign media_shadow = true
        endif
    endif

    assign image_loading = 'lazy'
    if section.index0 == 0
        assign image_loading = 'eager'
    endif
-%}
{%- capture hero_image_srcsize -%}(100vw - (100vw - {{ settings.container_width }}px)/2) * {{ image_width | divided_by: 100.0 }}{%- endcapture -%}


{%- capture Media -%}
    {%- capture Image -%}
        {% render 'media',
            image: section.settings.image,
            height: image_height,
            srcsize_desktop: hero_image_srcsize,
            placeholder: 'detailed-apparel',
            image_loading: image_loading
        %}
    {%- endcapture -%}
    {% render 'video-popup',
        video: video,
        id: popup_id,
        content: Image,
        icon: 'play',
        icon_color: section.settings.video_icon_color,
        icon_size: '6rem',
        autoplay: section.settings.autoplay
    %}
{%- endcapture -%}

{%- capture Text -%}
    {%- capture Hero -%}
        {% render 'hero',
            blocks: section.blocks,
            align: 'center',
            width: 70,
            outer_gap: true
        %}
    {%- endcapture -%}
    {% render 'floating-content',
        x: 'center',
        y: 'center',
        content: Hero,
        padded: true
    %}
{%- endcapture -%}

{%- capture Content -%}
    {% render 'media-with-text',
        media: Media,
        text: Text,
        media_width: image_width,
        media_position: section.settings.image_position,
        media_shadow: media_shadow
    %}
{%- endcapture -%}

{% render 'section-body',
    content: Content,
    container: section_layout,
    spaced: true,
    curved: curved,
    color_scheme: section.settings.color_scheme,
    paint: 'content',
    bg_pattern: section.settings.pattern,
    bg_pattern_scale: section.settings.pattern_scale,
    bg_pattern_animation: section.settings.pattern_animation
%}



